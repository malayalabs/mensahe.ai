{
  "name": "mensahe-chat-widget",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "build:extension": "cross-env NODE_ENV=production vite build --config vite.extension.config.js",
    "postbuild:extension": "cp src/extension/manifest.json extension-dist/ && cp src/extension/content.css extension-dist/ && cp -r src/extension/assets extension-dist/ && mv extension-dist/src/extension/popup.html extension-dist/popup.html && rm -rf extension-dist/src"
  },
  "dependencies": {
    "cross-env": "^7.0.3"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.6",
    "postcss": "^8.4.38",
    "sharp": "^0.33.5",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.2.2",
    "vite": "^4.5.3"
  }
}
